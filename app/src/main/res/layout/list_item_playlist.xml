<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_first_playlist">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_list_item_one_playlist_cover"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_list_item_one_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14sp" />

</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_second_playlist">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/iv_list_item_two_playlist_cover"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_list_item_two_playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="center"/>

    </LinearLayout>




</LinearLayout>